<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log" layout="${longdate} | ${pad:padding=6:fixedLength=true:${uppercase:${level}}} | ${pad:padding=70:fixedLength=true:${callsite}} | ${message}" />
  </targets>
  <rules>
    <!-- minlevel="Trace" -->
    <logger name="*" writeTo="f" />
  </rules>
</nlog>